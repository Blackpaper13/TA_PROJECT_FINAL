<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:orientation="vertical"
    tools:context=".view.fragment.ControlFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:text="Status Control IoT Anda"
        android:textColor="@color/button_color"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="30dp"
            android:background="@drawable/shape_create"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pintu Gerbang"/>

            <ToggleButton
                android:id="@+id/tb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:minHeight="48dp"
                android:text="ToggleButton 1"
                android:textOff="Off"
                android:textOn="On" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="30dp"
            android:background="@drawable/shape_create"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lampu Kamar "
                android:id="@+id/pintu"/>

            <ToggleButton
                android:id="@+id/tb2"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="ToggleButton 1"
                android:textOff="Off"
                android:textOn="On" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="30dp"
            android:background="@drawable/shape_create"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lampu Kamar Mandi"/>
            <ToggleButton
                android:id="@+id/tb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="ToggleButton 1"
                android:textOff="Off"
                android:textOn="On" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="30dp"
            android:background="@drawable/shape_create"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical">


            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="12dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kipas Angin"/>

            <ToggleButton
                android:id="@+id/tb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="ToggleButton 1"
                android:textOff="Off"
                android:textOn="On" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="30dp"
            android:background="@drawable/shape_create"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pompa Air "/>
            <ToggleButton
                android:id="@+id/tb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="ToggleButton 1"
                android:textOff="Off"
                android:textOn="On" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>